<div class='flexcol'>
    <div class='flexrow'>
        <div class='flexcol'>
            <div class='flex0 column-p'>
                <h3>{{localize 'tg.plurals.weapon'}} <a class='openItemsModal' title='{{localize "tg.ItemEdit"}}' data-action='edit'><i class='fas fa-eye'></i></a></h3>
                <ol class='item-list'>
                    {{#each data.items as |item id|}}
                        {{#if (eq this.type 'weapon')}}
                            <li class='item flexrow' data-item-id='{{item._id}}'>
                                <img
                                    src='{{item.img}}'
                                    title='{{item.name}}'
                                    width='24'
                                    height='24'
                                />
                                <h4 class='item-name'>{{item.name}}</h4>
                                <div class='item-buttons'>
                                    {{localize 'tg.attributes.damage'}}:
                                    {{item.system.damage}}
                                    <span>|</span>
                                    {{localize 'tg.attributes.range'}}:
                                    {{item.system.range}}
                                </div>
                                <div class='item-controls'>
                                    <a class="rollable-weapon">
                                        <i class="fas fa-dice-d10"></i>
                                    </a>
                                    <a
                                        class='item-control'
                                        title='{{localize "tg.common.edit"}}'
                                        data-action='edit'
                                    ><i class='fas fa-edit'></i></a>
                                    <a
                                        class='item-control'
                                        title='{{localize "tg.common.delete"}}'
                                        data-action='delete'
                                    ><i class='fas fa-trash'></i></a>
                                </div>
                            </li>
                        {{/if}}
                    {{/each}}
                    {{#parryActive data.system.selectedFightingStance}}
                        <li class='item flexrow'>
                            <h4 class='item-name'>{{localize "tg.attributes.parry"}}</h4>
                            <div class='item-controls'>
                                <a class="rollable-parry">
                                    <i class="fas fa-dice-d10"></i>
                                </a>
                            </div>
                        </li>
                    {{/parryActive}}
                </ol>
            </div>
            <div class='flex0 column-p'>
                <h3>{{localize 'tg.attributes.armor'}} <a class='openItemsModal' title='{{localize "tg.common.edit"}}' data-action='edit'><i class='fas fa-eye'></i></a></h3>
                <ol class='item-list'>
                    {{#each data.items as |item id|}}
                        {{#if (eq this.type 'armor')}}
                            <li class='item flexrow' data-item-id='{{item._id}}'>
                                <img
                                    src='{{item.img}}'
                                    title='{{item.name}}'
                                    width='24'
                                    height='24'
                                />
                                <h4 class='item-name'>{{item.name}}</h4>
                                <div class='item-buttons'>
                                    {{localize 'tg.common.protection'}}:
                                    {{item.system.protection}}
                                </div>
                                <div class='item-controls'>
                                    <a
                                        class='item-control'
                                        title='{{localize "tg.common.edit"}}'
                                        data-action='edit'
                                    ><i class='fas fa-edit'></i></a>
                                    <a
                                        class='item-control'
                                        title='{{localize "tg.common.delete"}}'
                                        data-action='delete'
                                    ><i class='fas fa-trash'></i></a>
                                </div>
                            </li>
                        {{/if}}
                    {{/each}}
                </ol>
            </div>
        </div>
        <div class='column-p'>
            <h3>{{localize 'tg.attributes.fightingStance'}}</h3>
            <div class='flexcol'>
                <div class='form-fields'>
                    <label for='extra'>{{localize 'tg.common.type'}}:</label>
                    <select id='extra' name='system.selectedFightingStance'>
                        {{#select data.system.selectedFightingStance}}
                            <option value=''>
                                {{localize 'tg.common.none' }}
                            </option>
                            {{#each fightingStances}}
                                <option value='{{this}}'>{{localizeItem
                                    this
                                }}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div class='form-fields'>
                    <label for='potential'>{{localize 'tg.common.potential'}}:</label>
                    <input id='potential'  type='text' value="{{actor.system.potential}}" disabled />
                </div>
            </div>
            <div class='flexcol'>
                {{#each actor.system.fightingStances as |object key|}}
                    {{#if (eq key ../data.system.selectedFightingStance)}}
                        <h3>{{localizeItem key}}</h3>
                        <div class="form-fields">
                            <label for="{{key}}Defense">{{localize 'tg.attributes.defense'}}:</label>
                            <input id="{{key}}Defense" type="number" value="{{object.defense}}" disabled />
                        </div>
                        <div class="form-fields">
                            <label for="{{key}}Speed">{{localize 'tg.attributes.speed'}}:</label>
                            <input id="{{key}}Speed" type="number" value="{{object.speed}}" disabled />
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>