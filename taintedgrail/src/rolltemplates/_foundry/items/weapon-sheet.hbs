<form class='flexcol {{cssClass}}' autocomplete='off'>
    <header class='flex0 sheet-header'>
        <img
            class='profile-img'
            src='{{data.img}}'
            data-edit='img'
            title='{{data.name}}'
        />
        <div class='header-fields'>
            <h1 class='charname'>
                <input
                    name='name'
                    type='text'
                    value='{{data.name}}'
                    placeholder='Name'
                />
            </h1>
        </div>
    </header>
    <div class='flex0 flexcol'>
        <div>
            <h3>{{localize 'tg.common.domainAndDiscipline'}}</h3>
            <div class='flexrow'>
            <div class='form-fields'>
                    <label for='domain'>{{localize 'tg.common.domain'}}:</label>
                    <select id='domain' name='system.domain'>
                        <option value=''>
                            {{localize 'tg.commmon.none' }}
                        </option>
                        {{#select data.system.domain}}
                            {{#each domains}}
                                <option value='{{this}}'>{{localizeItem
                                    this
                                }}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div class='form-fields'>
                    <label for='discipline'>{{localize 'tg.common.discipline'}}:</label>
                    <select id='discipline' name='system.discipline'>
                        <option value=''>
                            {{localize 'tg.common.none' }}
                        </option>
                        {{#select data.system.discipline}}
                            {{#each disciplines}}
                                <option value='{{this}}'>{{localizeItem
                                    this
                                }}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class='flex0 flexcol'>
        <div>
            <h3>{{localize 'tg.common.attributes'}}</h3>
            <div class='flexrow'>
                <div class='form-fields'>
                    <label for='damage'>{{localize 'tg.attributes.damage'}}:</label>
                    <input
                        id='damage'
                        type='number'
                        name='system.damage'
                        value='{{data.system.damage}}'
                    />
                </div>
                <div class='form-fields'>
                    <label for='range'>{{localize 'tg.attributes.range'}}:</label>
                    <input
                        id='range'
                        type='number'
                        name='system.range'
                        value='{{data.system.range}}'
                    />
                </div>
            </div>
        </div>
    </div>
<!--    <div class='flex0'>-->
<!--        {{> "systems/tg/templates/parts/sheet-price.hbs" price=data.system.price availability=data.system.availability}}-->
<!--    </div>-->
    <div>
        <h3>{{localize 'tg.common.description'}}</h3>
        {{editor
            descriptionHTML
            target='system.description'
            button=true
            editable=editable
            engine='prosemirror'
        }}
    </div>
</form>